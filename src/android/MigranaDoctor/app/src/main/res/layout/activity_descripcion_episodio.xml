<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.javier.myapplication.DescripcionEpisodio">

    <TextView
        android:id="@+id/textViewPacienteId"
        android:text="Paciente: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewNombrePacienteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textViewPacienteId"
        />
    <TextView
        android:id="@+id/textViewDesencadenanteId"
        android:text="Desencadenantes:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNombrePacienteId"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewListaDesencadenanteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDesencadenanteId"
        />
    <TextView
        android:id="@+id/textViewIntensidadId"
        android:text="Intensiadad del dolor: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewListaDesencadenanteId"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewDescripcionIntensidadId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewListaDesencadenanteId"
        android:layout_toRightOf="@id/textViewIntensidadId"
        />
    <TextView
        android:id="@+id/textViewLocalizacionId"
        android:text="Localizacion del dolor: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescripcionIntensidadId"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewDescripcionLocalizacionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescripcionIntensidadId"
        android:layout_toRightOf="@id/textViewLocalizacionId"
        />
</RelativeLayout>
